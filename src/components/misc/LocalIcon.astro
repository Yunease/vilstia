---
interface Props {
	name: string;
	class?: string;
}

const { name, class: className = "" } = Astro.props;

// Import all SVG files from the assets/svg directory
const svgModules = import.meta.glob('../../assets/svg/*.svg', { query: '?raw', import: 'default', eager: true });

const svgPath = `../../assets/svg/${name}.svg`;
const svgContent = svgModules[svgPath];

if (!svgContent) {
	console.error(`SVG icon not found: ${name}`);
}
---

{svgContent ? (
	<span class={`inline-flex items-center justify-center ${className}`} set:html={svgContent} />
) : (
	<span class={`inline-flex items-center justify-center ${className}`}>?</span>
)}
